<h1>Login</h1>

<%= form_for @conn, Routes.session_path(@conn, :create), [as: :user], fn field -> %>
  <%= label field, :email, [class: "add__a--class add__another--class"] %>
  <%= text_input field, :email %>

  <%= label field, :password %>
  <%= password_input field, :password %>

  <div><%= submit "Submit" %></div>
<% end %>
